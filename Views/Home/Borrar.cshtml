@model AplicacionCrud.Models.Domain.Contacto

@{
    ViewData["Title"] = "Borrar contacto";
}

<h1 class="text-center" style="color: #dee2e6;">Contacto con .NET 7 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card" style="border-radius: .5rem; border: 0px solid; background-color: #2b3035;">
            <div class="card-header" style="background-color: #712cf9;">
                <h3 class="text-white"><strong>Borrar Usuario</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Borrar" method="post">

                    <!--ID DEL USUARIO COMO CAMPO OCULTO-->
                    <input type="hidden" asp-for="id"/>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="contro-label" style="color: #dee2e6;"></label>
                        <input style="background-color: #2b3035; color: white; border: 1px solid #dee2e6;" asp-for="Nombre" class="form-control" readonly/>

                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="contro-label" style="color: #dee2e6;"></label>
                        <input style="background-color: #2b3035; color: white; border: 1px solid #dee2e6;" asp-for="Telefono" class="form-control" readonly/>

                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                   <div class="form-group">
                        <label asp-for="Celular" class="contro-label" style="color: #dee2e6;"></label>
                        <input style="background-color: #2b3035; color: white; border: 1px solid #dee2e6;" asp-for="Celular" class="form-control" readonly/>

                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto" style="color: #dee2e6;"><i class="bi bi-eraser-fill"></i>Borrar Usuario</button>
                    </div>

                
                </form>

                <a asp-controller="Home" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>


